{
  "schema": [
    {
      "${CRAFT_CMS_GRAPHQL_ENDPOINT}": {
        "headers": {
          "authorization": "bearer ${CRAFT_CMS_GRAPHQL_TOKEN}"
        }
      }
    }
  ],
  "documents": "src/gql/**/*.ts",
  "generates": {
    "src/schema/graphql.ts": {
      "plugins": [
        "typescript",
        "typescript-operations",
        "typescript-graphql-request"
      ],
      "config": {
        "withHooks": true,
        "maybeValue": "T",
        "avoidOptionals": {
          "field": true,
          "inputValue": true,
          "object": true,
          "defaultValue": true
        }
      }
    }
  }
}
