---
import DynatraceDefaultLayout from "@layouts/dynatrace/Default.astro";
import PerformDefaultLayout from "@layouts/perform/Default.astro";
import AmplifyDefaultLayout from "@layouts/amplify/Default.astro";
import InnovateDefaultLayout from "@layouts/innovate/Default.astro";
import { ISEO } from "@utils/parseSEO";
import { useTranslations } from "@i18n/utils";
import { ui } from "@i18n/ui";

export interface Props {
  title: string;
  seo: ISEO;
  lang: string;
  siteHandle: string;
  typeHandle: string;
  sectionHandle: string;
  uri: string;
  id: string;
  siteId: string;
  token: string;
  xCraftPreview: string;
  xCraftLivePreview: string;
}

const {
  title,
  lang,
  siteHandle,
  typeHandle,
  sectionHandle,
  uri,
  id,
  siteId,
  seo,
  token,
  xCraftPreview,
  xCraftLivePreview,
} = Astro.props;

const t = siteHandle
  ? useTranslations(siteHandle as keyof typeof ui)
  : useTranslations("marketing_en" as keyof typeof ui);

// Get the right layout based on the site handle
let Layout = DynatraceDefaultLayout;
const Layouts = {
  dynatrace: DynatraceDefaultLayout,
  events_perform: PerformDefaultLayout,
  events_amplify: AmplifyDefaultLayout,
  events_innovate: InnovateDefaultLayout,
  events_innovate_pt_br: InnovateDefaultLayout,
};

if (siteHandle && Layouts && siteHandle in Layouts) {
  Layout = Layouts[siteHandle];
}
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{seo?.seoTitle ?? t("preview.title")}</title>

    {seo?.meta?.map((item) => <meta {...item} />)}
    {seo?.links?.map((item) => <link {...item} />)}
    {
      seo?.jsonLd?.map((item) => (
        <script type="application/ld+json" set:html={JSON.stringify(item)} />
      ))
    }
  </head>
  <body>
    <h1>{title}</h1>
    {siteId && id && <Layout {...Astro.props} />}
  </body>
</html>

<script is:inline>
  document.documentElement.setAttribute(
    "data-theme",
    localStorage.getItem("theme") || "default"
  );
</script>
