{% extends "_layouts/layout-patternlib.twig" %}

{% block blockAppContent %}
  {# Images #}
  {% set cat01Image = craft.assets.title('Cat 01').volume('templateImages').one() %}
  {% set cat02Image = craft.assets.title('Cat 02').volume('templateImages').one() %}
  {% set cat03Image = craft.assets.title('Cat 03').volume('templateImages').one() %}

  {% cache using key craft.app.request.pathInfo %}

    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Size: Landscape{% endblock %}
      {% block content %}
        {{ include('_components/image/image.twig', {
          data: {
            image: cat01Image ??? null,
            aspectRatio: 'aspect-landscape',
            lazy: false,
          }
        }, withContext = false) }}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Size: Square{% endblock %}
      {% block content %}
        {{ include('_components/image/image.twig', {
          data: {
            image: cat02Image ??? null,
            aspectRatio: 'aspect-square',
            lazy: false,
          }
        }, withContext = false) }}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Size: Portrait{% endblock %}
      {% block content %}
        {{ include('_components/image/image.twig', {
          data: {
            image: cat01Image ??? null,
            aspectRatio: 'aspect-portrait',
          }
        }, withContext = false) }}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Size: Auto{% endblock %}
      {% block content %}
        {{ include('_components/image/image.twig', {
          data: {
            image: cat01Image ??? null,
            aspectRatio: 'aspect-auto',
          }
        }, withContext = false) }}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Decorative Image (no alt text){% endblock %}
      {% block content %}
        {{ include('_components/image/image.twig', {
          data: {
            image: cat01Image ??? null,
            aspectRatio: 'aspect-landscape',
            decorativeImage: true
          }
        }, withContext = false) }}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Render plain image (img tag only){% endblock %}
      {% block content %}
        {{ include('_components/image/image.twig', {
          data: {
            image: cat01Image ??? null,
            aspectRatio: 'aspect-landscape',
            renderPlainImage: true
          }
        }, withContext = false) }}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Art Direction{% endblock %}
      {% block content %}
        {{ include('_components/image/image.twig', {
          data: {
            image: cat01Image ??? null,
            aspectRatio: 'aspect-portrait sm:aspect-square lg:aspect-landscape',
            sources: [
              [cat02Image, true, '(min-width: 1024px)'],
              [cat03Image, true, '(min-width: 640px)'],
            ]
          }
        }, withContext = false) }}
      {% endblock %}
    {% endembed %}

  {% endcache %}
{% endblock %}


